{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "types": ["jest"],
    "paths": {
      "@axios-plugin/*": ["packages/*/src"],
    },
  },
  "include": [
    "packages/*/src",
    "packages/*/__tests__",
    "scripts/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
