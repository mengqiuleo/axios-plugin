{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/types",
    "sourceMap": true,
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,

    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "types": ["jest"]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
